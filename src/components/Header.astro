    </div>

    <!-- Burger Button (kun på mobil) -->
    <button id="burger" class="md:hidden flex flex-col justify-between w-8 h-6 focus:outline-none">
      <span class="block h-1 w-full bg-[#53081B] transition-all duration-200 hover:scale-110 hover:bg-[#AE3359]"></span>
      <span class="block h-1 w-full bg-[#53081B] transition-all duration-200 hover:scale-110 hover:bg-[#AE3359]"></span>
